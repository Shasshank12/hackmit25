{
  "name": "Simple Lecture Recorder",
  "description": "Records lecture transcripts and saves them to a file. Say 'start lecture' to begin recording, 'stop lecture' to finish and save.",
  "version": "1.0.0",
  "packageName": "com.hackmit.lectureassistant",
  "hardware": [
    {
      "type": "microphone",
      "required": true,
      "description": "Required for recording speech during lectures"
    },
    {
      "type": "display",
      "required": true,
      "description": "Required for showing recording status and instructions"
    }
  ],
  "settings": [],
  "aiTools": [
    {
      "name": "lecture_control",
      "description": "Controls recording through voice commands",
      "triggers": [
        "start lecture",
        "begin lecture",
        "stop lecture",
        "end lecture"
      ]
    }
  ],
  "permissions": ["microphone", "display", "transcription"],
  "urls": {
    "development": "http://localhost:3000",
    "production": "https://your-production-url.com"
  }
}
